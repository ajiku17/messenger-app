<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/message_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sent_message_background"
        android:padding="@dimen/padding"
        android:textColor="@color/white"
        android:textSize="@dimen/sent_message_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/messagetext" />

    <TextView
        android:id="@+id/time_sent_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/message_view"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/sent_time"
        android:layout_marginEnd="@dimen/margin"/>


</androidx.constraintlayout.widget.ConstraintLayout>