<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/received_message_background"
        android:padding="@dimen/padding_large"
        android:layout_margin="@dimen/margin_small"
        android:text="@string/messagetext"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/sent_message_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/time_sent_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sent_time"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/message_view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>